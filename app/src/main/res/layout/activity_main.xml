<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_span_1"
        style="@style/testStyle"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_spannable"
        android:text="Text spannable"
        style="@style/testStyle"/>

    <TextView
        android:id="@+id/text_span_2"
        style="@style/testStyle"/>

    <TextView
        android:id="@+id/text_span_3"
        style="@style/testStyle" />


    <TextView
        android:id="@+id/text_span_click"
        tools:text="Click text"
        style="@style/testStyle" />


    <TextView
        android:id="@+id/text_span_click_url"
        tools:text="Click text URL"
        style="@style/testStyle" />


    <TextView
        android:id="@+id/text_subscript"
        tools:text="Text"
        android:padding="10dp"
        style="@style/testStyle" />


    <TextView
        android:id="@+id/text_super_subscript"
        tools:text="Text"
        android:padding="10dp"
        style="@style/testStyle" />

    <TextView
        android:id="@+id/text_under_line"
        tools:text="Text under_line"
        android:padding="10dp"
        style="@style/testStyle" />

    <TextView
        android:id="@+id/text_under_strike"
        tools:text="Text under_line"
        android:padding="10dp"
        style="@style/testStyle" />

    <TextView
        android:id="@+id/text_under_relative"
        tools:text="Text under_line"
        android:padding="10dp"
        style="@style/testStyle" />

    <TextView
        android:id="@+id/text_under_bullet"
        tools:text="Text"
        android:padding="10dp"
        style="@style/testStyle" />


</LinearLayout>