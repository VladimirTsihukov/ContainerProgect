<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_span_1"
            style="@style/testStyle"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_spannable"
            style="@style/testStyle"
            android:text="Text spannable" />

        <TextView
            android:id="@+id/text_span_2"
            style="@style/testStyle" />

        <TextView
            android:id="@+id/text_span_3"
            style="@style/testStyle" />


        <TextView
            android:id="@+id/text_span_click"
            style="@style/testStyle"
            tools:text="Click text" />


        <TextView
            android:id="@+id/text_span_click_url"
            style="@style/testStyle"
            tools:text="Click text URL" />


        <TextView
            android:id="@+id/text_subscript"
            style="@style/testStyle"
            android:padding="10dp"
            tools:text="Text" />


        <TextView
            android:id="@+id/text_super_subscript"
            style="@style/testStyle"
            android:padding="10dp"
            tools:text="Text" />

        <TextView
            android:id="@+id/text_under_line"
            style="@style/testStyle"
            android:padding="10dp"
            tools:text="Text under_line" />

        <TextView
            android:id="@+id/text_under_strike"
            style="@style/testStyle"
            android:padding="10dp"
            tools:text="Text under_line" />

        <TextView
            android:id="@+id/text_under_relative"
            style="@style/testStyle"
            android:padding="10dp"
            tools:text="Text under_line" />

        <TextView
            android:id="@+id/text_under_bullet"
            style="@style/testStyle"
            android:padding="10dp"
            tools:text="Text" />

        <TextView
            android:id="@+id/text_under_quote_span"
            style="@style/testStyle"
            android:padding="10dp"
            tools:text="Text" />


        <TextView
            android:id="@+id/text_alignment_span"
            style="@style/testStyle"
            android:padding="10dp"
            tools:text="Text" />

        <TextView
            android:id="@+id/text_image_span"
            style="@style/testStyle"
            android:padding="10dp"
            tools:text="Text" />

        <TextView
            android:id="@+id/text_dynamic_icon"
            style="@style/testStyle"
            android:padding="10dp"
            tools:text="Text" />

        <TextView
            android:id="@+id/text_margin_icon"
            style="@style/testStyle"
            android:padding="10dp"
            tools:text="Text" />

        <TextView
            android:id="@+id/text_appearance_span"
            style="@style/testStyle"
            android:padding="10dp"
            tools:text="Text" />

        <TextView
            android:id="@+id/text_max_filter"
            style="@style/testStyle"
            android:padding="10dp"
            tools:text="Text" />

        <TextView
            android:id="@+id/text_leading_margin_span"
            style="@style/testStyle"
            android:textSize="20sp"
            android:padding="10dp"
            tools:text="Text" />

        <TextView
            android:id="@+id/text_string_builder"
            style="@style/testStyle"
            android:textSize="20sp"
            android:padding="10dp"
            tools:text="Text" />



    </LinearLayout>
</ScrollView>