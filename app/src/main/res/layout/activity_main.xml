<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.text.TextUtils"/>
        <import type="android.view.View"/>

        <variable
            name="employee"
            type="com.androidapp.containerprogect.ex_01_basics.Employee" />

        <variable
            name="department"
            type="com.androidapp.containerprogect.ex_01_basics.Department" />
        <variable
            name="handler"
            type="com.androidapp.containerprogect.ex_02_click.MyHandler" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text='@{employee.name + (department == null ? " (" + department.name + ")" : "")}'
            tools:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@{TextUtils.isEmpty(employee.name) ? employee.address : @string/empty_address}"
            tools:text="Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@{String.valueOf(employee.salary)}"
            tools:text="Salary"
            android:visibility="@{TextUtils.isEmpty(String.valueOf(employee.salary)) ? View.GONE : View.VISIBLE}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_gravity="center"
            android:text="@string/delete"
            android:onClick="@{handler::onDelete}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_gravity="center"
            android:text="@string/employee"
            android:onClick="@{(view) -> handler.getEmployee(employee)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:layout_gravity="center"
            android:text="@string/enable"
            android:onCheckedChanged="@{(view, checked) -> handler.onEnabled(employee, checked)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>